---
import type { HTMLAttributes } from "astro/types";
import { cn } from "../utils";
import { cva, type VariantProps } from "class-variance-authority";

const anchorVariants = cva("", {
 variants: {
  variant: {
   explore:
    "explore uppercase relative font-font-serif z-1  text-dark bg-white px-8 aspect-square grid rounded-full after:contents-none after:absolute after:w-full after:h-full after:rounded-full after:-z-1 after:bg-white/15 ",
   primary: "text-white underline ",
   default: "",
  },
 },
 defaultVariants: {
  variant: "default",
 },
});

interface Props
 extends HTMLAttributes<"a">,
  VariantProps<typeof anchorVariants> {
 asChild?: boolean;
}
const { class: className, asChild = false, variant, ...props } = Astro.props;
---

<a class={cn(anchorVariants({ variant }), className)} {...props}>
 {asChild ? <slot /> : <span>{props.children}</span>}
 <slot />
</a>

<style>
 .explore::after {
  transition: transform 500ms ease-in-out;
 }

 .explore:hover::after,
 .explore:focus::before {
  transform: scale(1.5);
 }
</style>
