---
import Navbar from "./Navbar.astro";
---

<header class="w-full" transition:persist>
 <div
  id="header-container"
  class="flex justify-between items-center max-w-screen-2xl px-4 py-8 mx-auto"
 >
  <div class="grow-0">
   <img src="/assets/shared/logo.svg" alt="Space Tourism Logo" />
  </div>
  <button class="z-[2000] sm:hidden absolute top-8 right-4 bg-transparent"
   ><span
    class="sr-only"
    aria-controls="primary-navigation"
    aria-expanded="false">Menu</span
   >
   <img
    src="/assets/shared/icon-hamburger.svg"
    class="focus:outline-4"
    id="hamburger-button"
    alt="Menu Open"
   />

   <img
    src="/assets/shared/icon-close.svg"
    id="close-button"
    class="hidden focus:outline-4"
    alt="Close Menu"
   />
  </button>

  <!-- <hr class="hidden sm:block py-1.5 text-dark border-t-2 border-red-400" /> -->

  <Navbar />
 </div>
</header>
